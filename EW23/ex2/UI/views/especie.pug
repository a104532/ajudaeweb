extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h2 Espécie: #{especie.nome_comum}
      h3 Nome Científico: #{especie.nome_cientifico}
    .w3-container
      if plantas && plantas.length > 0
        h3.w3-margin-top Plantas desta espécie:
        table.w3-table-all.w3-hoverable
          thead
            tr.w3-light-grey
              th ID
              th Freguesia
              th Estado
              th Intervenções
          tbody
            each planta in plantas
              tr
                td
                  a(href=`/${planta._id}`)= planta._id
                td= planta.freguesia
                td= planta.estado
                td= planta.numero_intervencoes
      else
        .w3-panel.w3-yellow
          h3 Nenhuma planta encontrada para esta espécie
    footer.w3-container.w3-teal
      a.w3-button(href='/') Voltar