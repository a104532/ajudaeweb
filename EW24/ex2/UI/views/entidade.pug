extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h2 Entidade: #{entidade} (NIPC: #{nipc})
    
    .w3-container
      h3 Contratos
      table.w3-table-all.w3-hoverable
        thead
          tr.w3-blue
            th ID Contrato
            th Objeto
            th Data
            th Pre√ßo
        tbody
          each contrato in contratos
            tr
              td
                a(href=`/${contrato._id}`)= contrato._id
              td= contrato.objectoContrato
              td= contrato.dataCelebracaoContrato
              td= contrato.precoContratual
      
      h3 Total: #{total}
    
    footer.w3-container.w3-blue
      a.w3-button(href='/') Voltar